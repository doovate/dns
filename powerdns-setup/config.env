# ============================================
# CONFIGURACIÓN DE RED
# ============================================
DNS_SERVER_IP=192.168.25.60
INTERNAL_NETWORK=192.168.24.0/22
VPN_NETWORK=10.66.66.0/24
DNS_ZONE=doovate.com

# ============================================
# FORWARDERS DNS PÚBLICOS
# ============================================
DNS_FORWARDER_1=8.8.8.8
DNS_FORWARDER_2=1.1.1.1

# ============================================
# PUERTOS
# ============================================
PDNS_AUTH_PORT=5300
PDNS_RECURSOR_PORT=53
WEBUI_PORT=9191
GUNICORN_PORT=8000
NGINX_HTTPS_PORT=443

# ============================================
# BASE DE DATOS
# ============================================
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=powerdns
DB_USER=pdns
DB_PASSWORD=11vicented

# ============================================
# POWERDNS-ADMIN
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=11vicented
ADMIN_EMAIL=admin@doovate.com
PDNS_ADMIN_PATH=/opt/web/powerdns-admin

# ============================================
# REGISTROS DNS INICIALES
# Formato: "host:TYPE:VALUE"
# ============================================
DNS_RECORDS=(
    "dv-vpn:A:192.168.24.20"
    "sv-vpn:A:192.168.24.50"
    "dns:A:192.168.25.60"
)

# ============================================
# CERTIFICADO SSL
# ============================================
SSL_TYPE=selfsigned
SSL_DOMAIN=
SSL_EMAIL=

# ============================================
# OPCIONES DE INSTALACIÓN
# ============================================
INTERACTIVE_MODE=true
VERBOSE_MODE=true
ENABLE_LOGGING=true
LOG_FILE=/var/log/powerdns-setup.log
PYTHON_VERSION=3.12
DRY_RUN=false

# ============================================
# FIREWALL
# ============================================
ENABLE_FIREWALL=true
SSH_PORT=22
