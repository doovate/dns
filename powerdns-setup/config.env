# ============================================
# CONFIGURACIÓN DE RED
# ============================================
# IP donde escuchará el servidor DNS
DNS_SERVER_IP=192.168.25.60

# Redes que pueden hacer consultas DNS (CIDR, separadas por espacio o coma)
INTERNAL_NETWORK=192.168.24.0/22
VPN_NETWORK=10.66.66.0/24

# Zona DNS interna
DNS_ZONE=doovate.com

# ============================================
# FORWARDERS DNS PÚBLICOS
# ============================================
DNS_FORWARDER_1=8.8.8.8
DNS_FORWARDER_2=1.1.1.1

# ============================================
# PUERTOS (cambiar solo si hay conflictos)
# ============================================
PDNS_AUTH_PORT=5300
PDNS_RECURSOR_PORT=53
WEBUI_PORT=9191

# ============================================
# BASE DE DATOS
# ============================================
# Tipo: postgresql o mysql
DB_TYPE=postgresql

# Nombre de la base de datos
DB_NAME=powerdns

# Usuario de la base de datos
DB_USER=pdns

# Contraseña (dejar vacío para generar automáticamente)
DB_PASSWORD=

# Host y puerto BD (para instalaciones remotas)
DB_HOST=127.0.0.1
DB_PORT=

# ============================================
# POWERDNS-ADMIN
# ============================================
# Usuario administrador
ADMIN_USERNAME=admin

# Contraseña (dejar vacío para generar automáticamente)
ADMIN_PASSWORD=

# Email del administrador
ADMIN_EMAIL=admin@doovate.com

# API Key para PowerDNS Authoritative (dejar vacío para generar)
PDNS_API_KEY=

# ============================================
# REGISTROS DNS INICIALES
# ============================================
# Formato: nombre:ip (uno por variable)
DNS_RECORD_1=dv-vpn:192.168.24.20
DNS_RECORD_2=sv-vpn:192.168.24.50
DNS_RECORD_3=dns:192.168.25.60

# ============================================
# OPCIONES DE INSTALACIÓN
# ============================================
# Pausar entre pasos (true/false)
INTERACTIVE_MODE=true

# Mostrar comandos antes de ejecutarlos
VERBOSE_MODE=true

# Guardar logs detallados
ENABLE_LOGGING=true
LOG_FILE=/var/log/powerdns-setup.log

# Ruta de instalación base
INSTALL_DIR=/opt/powerdns-setup

# Archivo de progreso
PROGRESS_FILE=.install_progress
